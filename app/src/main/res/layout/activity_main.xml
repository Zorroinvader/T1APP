<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Existing Connection Buttons -->
    <Button
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prepare by MAC / Scan" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Disconnected"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect to ESP32"
        android:enabled="false"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnDisconnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:enabled="false"
        android:layout_marginTop="8dp"/>

    <!-- Existing Movement Buttons -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginTop="16dp">
        <!-- ... your F, L, S, R, B buttons ... -->
        <!-- Row 0 -->
        <Space
            android:layout_row="0" android:layout_column="0"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:layout_gravity="fill_horizontal" />
        <Button
            android:id="@+id/btnForward"
            android:layout_row="0" android:layout_column="1"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Forward"
            android:enabled="false"
            android:layout_gravity="center_horizontal"/>
        <Space
            android:layout_row="0" android:layout_column="2"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:layout_gravity="fill_horizontal" />

        <!-- Row 1 -->
        <Button
            android:id="@+id/btnLeft"
            android:layout_row="1" android:layout_column="0"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Left"
            android:enabled="false"
            android:layout_gravity="fill_horizontal"/>
        <Button
            android:id="@+id/btnStop"
            android:layout_row="1" android:layout_column="1"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Stop"
            android:enabled="false"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/btnRight"
            android:layout_row="1" android:layout_column="2"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Right"
            android:enabled="false"
            android:layout_gravity="fill_horizontal"/>

        <!-- Row 2 -->
        <Button
            android:id="@+id/btnCenterSteer"
            android:layout_row="2" android:layout_column="0"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Center"
            android:enabled="false"
            android:layout_gravity="fill_horizontal"/>
        <Button
            android:id="@+id/btnBackward"
            android:layout_row="2" android:layout_column="1"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Backward"
            android:enabled="false"
            android:layout_gravity="center_horizontal"/>
        <Space
            android:layout_row="2" android:layout_column="2"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:layout_gravity="fill_horizontal" />
    </GridLayout>

    <!-- Blinker Buttons (modified for ON/OFF) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnBlinkerLeftOn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Blink L ON"
            android:enabled="false"
            android:layout_marginEnd="4dp"/>
        <Button
            android:id="@+id/btnBlinkerLeftOff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Blink L OFF"
            android:enabled="false"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnBlinkerRightOn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Blink R ON"
            android:enabled="false"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"/>
        <Button
            android:id="@+id/btnBlinkerRightOff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Blink R OFF"
            android:enabled="false"/>
    </LinearLayout>

    <!-- Headlights, Backlights, Lichthupe -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <Button
            android:id="@+id/btnHeadlightsOn"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content" android:text="Head ON" android:enabled="false"
            android:layout_marginEnd="4dp"/>
        <Button
            android:id="@+id/btnHeadlightsOff"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content" android:text="Head OFF" android:enabled="false"
            android:layout_marginEnd="4dp"/>
        <Button
            android:id="@+id/btnLichthupe"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content" android:text="Flash" android:enabled="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <Button
            android:id="@+id/btnBacklightsOn"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content" android:text="Back ON" android:enabled="false"
            android:layout_marginEnd="4dp"/>
        <Button
            android:id="@+id/btnBacklightsOff"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content" android:text="Back OFF" android:enabled="false"/>
    </LinearLayout>

    <!-- Auto-Stop Override -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto-Stop Override: "/>
        <Button
            android:id="@+id/btnAutoStopEnable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor ON"
            android:enabled="false"/>
        <Button
            android:id="@+id/btnAutoStopDisable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Force Drive"
            android:enabled="false"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>